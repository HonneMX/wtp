# Установка базового образа Node.js
FROM node:12

# Создание директории приложения в контейнере
WORKDIR /app

# Копирование файлов зависимостей проекта
COPY ./views ./views
COPY package*.json ./
# Установка зависимостей проекта
RUN npm install

# Копирование всех файлов проекта в контейнер
COPY . .

# Определение порта, который будет использоваться приложением
EXPOSE 3000

# Команда для запуска приложения
CMD [ "node", "app.js" ]
